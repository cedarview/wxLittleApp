/**index.wxss**/

.container {
  position: relative;  
  background-color: #34A1E2;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.typeList {
  display: flex;
}

.typeItem {
  display: flex;
  width: 100rpx;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
}

.type {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.data-item{
  display: flex;
  font-size: 40rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.itemContainer{
  display: flex;
  position: relative;
  padding-top: 10rpx;
}

.descContainer{
  font-size: 30rpx;
  width: 60%;
}

.desc{
  font-size: 36rpx;
}

.source{
  font-size: 20rpx;
}

.imgContainer{
  padding-left: 50rpx;
  padding-right: 15rpx;
  width: 40%;  
  background: red;

}

.newsbgimg{
  width: 100%;
  height: 100%; 
}